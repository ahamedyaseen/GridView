<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/tvHeaderMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Month"
        android:textSize="24sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp"
        app:layout_constraintHorizontal_bias="0.501" />

    <TextView
        android:id="@+id/tvDay01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="D1"
        android:textSize="18sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tvHeaderMonth" />

    <TextView
        android:id="@+id/tvDay02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D2"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvDay01"
        app:layout_constraintLeft_toRightOf="@+id/tvDay01"
        android:layout_marginLeft="28dp" />

    <TextView
        android:id="@+id/tvDay03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D3"
        android:textSize="18sp"
        android:layout_marginStart="32dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvDay02"
        app:layout_constraintLeft_toRightOf="@+id/tvDay02"
        android:layout_marginLeft="28dp" />

    <TextView
        android:id="@+id/tvDay04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D4"
        android:textSize="18sp"
        android:layout_marginStart="32dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvDay03"
        app:layout_constraintLeft_toRightOf="@+id/tvDay03"
        android:layout_marginLeft="28dp" />

    <TextView
        android:id="@+id/tvDay05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D5"
        android:textSize="18sp"
        android:layout_marginStart="32dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvDay04"
        app:layout_constraintLeft_toRightOf="@+id/tvDay04"
        android:layout_marginLeft="28dp" />

    <TextView
        android:id="@+id/tvDay06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D6"
        android:textSize="18sp"
        android:layout_marginStart="32dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvDay05"
        app:layout_constraintLeft_toRightOf="@+id/tvDay05"
        android:layout_marginLeft="28dp" />

    <TextView
        android:id="@+id/tvDay07"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="32dp"
        android:text="D7"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvDay06"
        app:layout_constraintLeft_toRightOf="@+id/tvDay06"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.437" />

    <GridView
        android:id="@+id/MonthGrid"
        android:layout_width="0dp"
        android:layout_height="410dp"
        android:layout_marginTop="28dp"
        android:numColumns="7"
        app:layout_constraintTop_toBottomOf="@+id/tvDay01"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>